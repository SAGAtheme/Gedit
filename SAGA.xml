<?xml version="1.0" encoding="UTF-8"?>
<!--
Gedit theme using the SAGA palette.-->

<style-scheme id="SAGA" _name="SAGA" version="1.0">

  <author>Miusaky</author>
  <_description>A dark theme for Gedit</_description>

  <!-- Tango Palette -->
  <color name="MistyRose" value="#ffe1e1"/>
  <color name="Mauve"     value="#dfbaff"/>
  <color name="CottonCandy"    value="#ffc2df"/>
  <color name="PastelPeach"     value="#ffc79b"/>
  <color name="Blond"    value="#fff6c3"/>
  <color name="Menthol"     value="#baf7b5"/>
  <color name="Celeste"      value="#b2fff3"/>
  <color name="PastelMagenta"  value="#ff9fbc"/>
  <color name="LavenderPink"      value="#ffaecb"/>
  <color name="PaleLavender"  value="#f3ceff"/>
  <color name="Snow"      value="#fff6ff"/>
  <color name="BrightAsphalt"  value="#25282a"/>
  <color name="BrightCharcoal"  value="#1b1e20"/>
  <color name="Asphalt"  value="#141719"/>
  <color name="Charcoal"      value="#0f1214"/>
  <color name="VampireBlack"    value="#0A0D0F"/>
  <color name="Liqourice"     value="#05080a"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="Snow" background = "Charcoal"/>
  <style name="selection"                   foreground="Snow" background="BrightCharcoal"/>
  <style name="cursor"                      foreground="MistyRose"/>
  <style name="secondary-cursor"            foreground="MistyRose"/>
  <style name="current-line"                background="Asphalt"/>
  <style name="line-numbers"                foreground="Snow" background="Liqourice"/>
  <style name="draw-spaces"                 foreground="Snow"/>
  <style name="background-pattern"          background="VampireBlack"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="Mauve"/>
  <style name="bracket-mismatch"            foreground="Snow" background="PastelPeach"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="Snow" background="Liqourice"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="Snow" background="LavenderPink"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="BrightAsphalt"/>
  <style name="def:shebang"                 foreground="BrightAsphalt" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="Menthol"/>
  <style name="def:string"                  foreground="Menthol"/>
  <style name="def:special-char"            foreground="PaleLavender"/>
  <style name="def:special-constant"        foreground="PaleLavender"/>
  <style name="def:floating-point"          foreground="PaleLavender"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="LavenderPink"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="PastelMagenta" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="CottonCandy" bold="true"/>

  <!-- Markup -->
  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         foreground="Blond" bold="true"/>
  <style name="def:inline-code"             foreground="Menthol"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="MistyRose"/>
  <style name="def:link-symbol"             foreground="LavenderPink" bold="true"/>
  <style name="def:link-destination"        foreground="LavenderPink" italic="true" underline="single"/>
  <style name="def:heading"                 foreground="Celeste" bold="true"/>
  <style name="def:thematic-break"          foreground="Menthol" bold="true"/>
  <style name="def:preformatted-section"    foreground="Menthol"/>
  <style name="def:list-marker"             foreground="Celeste" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="Celeste"/>
  <style name="def:error"                   foreground="CottonCandy" bold="true"/>
  <style name="def:warning"                 foreground="PastelPeach"/>
  <style name="def:note"                    foreground="LavenderPink" bold="true"/>
  <style name="def:net-address"             italic="true" underline="single"/>
</style-scheme>
